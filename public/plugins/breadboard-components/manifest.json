{
  "id": "io.breadboard.components",
  "version": "0.1.1",
  "name": "Breadboard Component Pack",
  "description": "Provides resistor, LED, and jumper nodes tailored for the breadboard template.",
  "permissions": [],
  "bundle": {
    "url": "/plugins/breadboard-components/componentPlugin.js",
    "sandbox": "iframe",
    "integrity": ""
  },
  "nodes": [
    {
      "type": "resistor",
      "label": "Resistor",
      "description": "Simple two-pin resistor node with breadboard pin metadata.",
      "category": "breadboard",
      "icon": "SettingsEthernet",
      "entry": "/plugins/breadboard-components/componentPlugin.js#ResistorNode",
      "defaultWidth": 32,
      "defaultHeight": 18,
      "defaultData": {
        "pins": [
          {
            "id": "pinA",
            "row": "A",
            "column": null,
            "polarity": "neutral",
            "segmentPreference": "top"
          },
          {
            "id": "pinB",
            "row": "A",
            "column": null,
            "columnOffset": 1,
            "polarity": "neutral",
            "segmentPreference": "top"
          }
        ],
        "footprint": {
          "rows": 1,
          "columns": 2,
          "rowPitch": 1,
          "columnPitch": 1,
          "width": 2,
          "height": 1
        }
      },
      "handles": {
        "outputs": [
          { "id": "pinA", "label": "Pin A", "dataType": "value" },
          { "id": "pinB", "label": "Pin B", "dataType": "value" }
        ]
      },
      "renderer": {
        "entry": "/plugins/breadboard-components/resistorRenderer.js"
      },
      "extensions": {
        "layout": {
          "hideChrome": true,
          "padding": 0,
          "paddingTop": 0,
          "paddingRight": 0,
          "paddingBottom": 0,
          "paddingLeft": 0
        }
      }
    },
    {
      "type": "led",
      "label": "LED",
      "description": "Polarized LED node with anode/cathode handles.",
      "category": "breadboard",
      "icon": "LightMode",
      "entry": "/plugins/breadboard-components/componentPlugin.js#LEDNode",
      "defaultWidth": 24,
      "defaultHeight": 54,
      "defaultData": {
        "pins": [
          {
            "id": "anode",
            "row": "A",
            "column": null,
            "columnOffset": 0,
            "polarity": "anode",
            "segmentPreference": "top"
          },
          {
            "id": "cathode",
            "row": "F",
            "column": null,
            "columnOffset": 0,
            "polarity": "cathode",
            "segmentPreference": "bottom"
          }
        ],
        "footprint": { "rows": 2, "columns": 1, "rowPitch": 1, "columnPitch": 1, "width": 1, "height": 2 }
      },
      "handles": {
        "outputs": [
          { "id": "anode", "label": "Anode", "dataType": "value", "position": { "x": 0.5, "y": 0 } },
          { "id": "cathode", "label": "Cathode", "dataType": "value", "position": { "x": 0.5, "y": 1 } }
        ]
      },
      "renderer": {
        "entry": "/plugins/breadboard-components/ledRenderer.js"
      },
      "extensions": {
        "layout": {
          "hideChrome": true,
          "padding": 0,
          "paddingTop": 0,
          "paddingRight": 0,
          "paddingBottom": 0,
          "paddingLeft": 0
        }
      }
    },
    {
      "type": "jumper",
      "label": "Jumper Wire",
      "description": "Flexible jumper that connects two sockets or rails.",
      "category": "breadboard",
      "icon": "CallSplit",
      "entry": "/plugins/breadboard-components/componentPlugin.js#JumperNode",
      "defaultWidth": 72,
      "defaultHeight": 24,
      "defaultData": {
        "pins": [
          {
            "id": "wireA",
            "row": "A",
            "column": 1,
            "columnOffset": 0,
            "polarity": "neutral",
            "segmentPreference": "same"
          },
          {
            "id": "wireB",
            "row": "A",
            "column": 4,
            "columnOffset": 3,
            "polarity": "neutral",
            "segmentPreference": "same"
          }
        ],
        "footprint": { "rows": 1, "columns": 4, "rowPitch": 1, "columnPitch": 1, "width": 4, "height": 1 }
      },
      "handles": {
        "outputs": [
          { "id": "wireA", "label": "Wire A", "dataType": "value" },
          { "id": "wireB", "label": "Wire B", "dataType": "value" }
        ]
      },
      "renderer": {
        "entry": "/plugins/breadboard-components/jumperRenderer.js"
      },
      "extensions": {
        "layout": {
          "hideChrome": true,
          "padding": 0,
          "paddingTop": 0,
          "paddingRight": 0,
          "paddingBottom": 0,
          "paddingLeft": 0
        }
      }
    },
    {
      "type": "railTapPositive",
      "label": "Rail Tap (+)",
      "description": "Connects the positive rail to a socket column.",
      "category": "breadboard",
      "icon": "ElectricBolt",
      "entry": "/plugins/breadboard-components/componentPlugin.js#JumperNode",
      "defaultWidth": 16,
      "defaultHeight": 68,
      "defaultData": {
        "pins": [
          {
            "id": "rail",
            "row": "V+",
            "column": null,
            "columnOffset": 0,
            "polarity": "positive",
            "segmentPreference": "rail-top-positive"
          },
          {
            "id": "tap",
            "row": "A",
            "column": null,
            "columnOffset": 0,
            "polarity": "neutral",
            "segmentPreference": "top"
          }
        ],
        "footprint": { "rows": 1, "columns": 1, "rowPitch": 1, "columnPitch": 1, "width": 1, "height": 1 }
      },
      "handles": {
        "outputs": [
          { "id": "rail", "label": "Rail", "dataType": "value" },
          { "id": "tap", "label": "Tap", "dataType": "value" }
        ]
      },
      "renderer": {
        "entry": "/plugins/breadboard-components/railTapRenderer.js"
      },
      "extensions": {
        "layout": {
          "hideChrome": true,
          "padding": 0,
          "paddingTop": 0,
          "paddingRight": 0,
          "paddingBottom": 0,
          "paddingLeft": 0
        }
      }
    },
    {
      "type": "railTapNegative",
      "label": "Rail Tap (-)",
      "description": "Connects the ground rail to a socket column.",
      "category": "breadboard",
      "icon": "HorizontalRule",
      "entry": "/plugins/breadboard-components/componentPlugin.js#JumperNode",
      "defaultWidth": 16,
      "defaultHeight": 50,
      "defaultData": {
        "pins": [
          {
            "id": "rail",
            "row": "GND",
            "column": null,
            "columnOffset": 0,
            "polarity": "negative",
            "segmentPreference": "rail-bottom-negative"
          },
          {
            "id": "tap",
            "row": "A",
            "column": null,
            "columnOffset": 0,
            "polarity": "neutral",
            "segmentPreference": "top"
          }
        ],
        "footprint": { "rows": 1, "columns": 1, "rowPitch": 1, "columnPitch": 1, "width": 1, "height": 1 }
      },
      "handles": {
        "outputs": [
          { "id": "rail", "label": "Rail", "dataType": "value" },
          { "id": "tap", "label": "Tap", "dataType": "value" }
        ]
      },
      "renderer": {
        "entry": "/plugins/breadboard-components/railTapRenderer.js"
      },
      "extensions": {
        "layout": {
          "hideChrome": true,
          "padding": 0,
          "paddingTop": 0,
          "paddingRight": 0,
          "paddingBottom": 0,
          "paddingLeft": 0
        }
      }
    }
  ],
  "metadata": {
    "author": {
      "name": "NodeGraph"
    },
    "homepage": "https://example.com/breadboard",
    "license": "MIT"
  }
}
