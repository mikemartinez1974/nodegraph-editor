{
  "id": "com.twilight.hello",
  "version": "0.2.0",
  "name": "Hello from the Twilight Zone",
  "description": "Demo plugin that exposes sample nodes, including a custom canvas renderer.",
  "permissions": ["graph.read", "selection.read"],
  "bundle": {
    "url": "/plugins/twilight-hello/helloPlugin.js",
    "sandbox": "iframe",
    "integrity": ""
  },
  "nodes": [
    {
      "type": "twilight-hello",
      "label": "Twilight Hello",
      "description": "A plugin-backed node that emits a friendly greeting.",
      "category": "demo",
      "icon": "WavingHand",
      "entry": "/plugins/twilight-hello/helloPlugin.js#TwilightHelloNode",
      "defaultWidth": 240,
      "defaultHeight": 160,
      "defaultData": {
        "greeting": "Hello, from the Twilight Zone!",
        "tagline": "Friendly signal from another dimension",
        "mood": "calm",
        "emphasis": false
      },
      "definition": {
        "size": {
          "width": 240,
          "height": 160
        },
        "handles": {
          "inputs": [
            {
              "id": "trigger",
              "label": "Trigger",
              "dataType": "trigger"
            }
          ],
          "outputs": [
            {
              "id": "greeting",
              "label": "Greeting",
              "dataType": "value"
            }
          ]
        },
        "properties": [
          {
            "key": "greeting",
            "label": "Greeting",
            "type": "textarea",
            "default": "Hello, from the Twilight Zone!",
            "helperText": "Shown inside the node body"
          },
          {
            "key": "tagline",
            "label": "Tagline",
            "type": "text",
            "placeholder": "Optional subtitle"
          },
          {
            "key": "mood",
            "label": "Mood",
            "type": "select",
            "default": "calm",
            "options": [
              { "label": "Calm", "value": "calm" },
              { "label": "Excited", "value": "excited" },
              { "label": "Spooky", "value": "spooky" }
            ]
          },
          {
            "key": "emphasis",
            "label": "Emphasis",
            "type": "toggle",
            "default": false,
            "helperText": "Bold the primary greeting"
          }
        ],
        "display": {
          "variant": "card",
          "primaryField": "greeting",
          "secondaryField": "tagline",
          "badgeField": "mood",
          "footerField": "lastRun",
          "emptyState": "Use the Properties Panel to configure this node."
        }
      },
      "renderer": {
        "entry": "/plugins/twilight-hello/helloRenderer.js"
      }
    },
    {
      "type": "twilight-canvas",
      "label": "Twilight Canvas",
      "description": "Canvas-rendered node that mimics the native canvas node entirely inside the plugin iframe.",
      "category": "advanced",
      "icon": "Gesture",
      "entry": "/plugins/twilight-hello/helloPlugin.js#TwilightCanvasNode",
      "defaultWidth": 220,
      "defaultHeight": 140,
      "defaultData": {
        "style": "wave",
        "caption": "Renderer Canvas Node",
        "palette": ["#6C63FF", "#2CB67D", "#FFB020", "#FF5C8D"]
      },
      "definition": {
        "size": {
          "width": 220,
          "height": 140
        },
        "handles": {
          "inputs": [
            {
              "id": "signal",
              "label": "Signal",
              "dataType": "value"
            }
          ],
          "outputs": [
            {
              "id": "out",
              "label": "Out",
              "dataType": "value"
            }
          ]
        },
        "properties": [
          {
            "key": "caption",
            "label": "Caption",
            "type": "text",
            "placeholder": "Canvas label"
          },
          {
            "key": "style",
            "label": "Style",
            "type": "select",
            "default": "wave",
            "options": [
              { "label": "Wave", "value": "wave" },
              { "label": "Bars", "value": "bars" }
            ]
          },
          {
            "key": "samples",
            "label": "Samples",
            "type": "json",
            "placeholder": "[0.1, 0.4, 0.2]"
          },
          {
            "key": "values",
            "label": "Bar Values",
            "type": "json",
            "placeholder": "[0.2, 0.7, 0.5]"
          }
        ]
      },
      "renderer": {
        "entry": "/plugins/twilight-hello/canvasRenderer.js"
      },
      "extensions": {
        "layout": {
          "handleExtension": 4,
          "hideChrome": true,
          "padding": 0,
          "paddingBottom": 0
        }
      }
    }
  ],
  "panels": [],
  "metadata": {
    "homepage": "https://example.com/twilight",
    "license": "MIT",
    "changelog": "0.1.0 â€“ Initial sample plugin shipped with the host",
    "author": {
      "name": "Twilight Lab"
    }
  }
}
