{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NodeGraph Save Format",
  "type": "object",
  "required": [
    "fileVersion",
    "metadata",
    "settings",
    "viewport",
    "nodes",
    "edges",
    "clusters"
  ],
  "properties": {
    "fileVersion": {
      "type": "string",
      "description": "Schema/file version (bump on breaking changes, e.g. '1.0')"
    },
    "metadata": {
      "type": "object",
      "required": [
        "title",
        "created",
        "modified"
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "modified": {
          "type": "string",
          "format": "date-time"
        },
        "author": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "settings": {
      "type": "object",
      "properties": {
        "theme": {
          "type": "object",
          "description": "Optional theme override object. If present, use these colors to style the graph instead of the app defaults.",
          "properties": {
            "primary": {
              "type": "string"
            },
            "primaryContrast": {
              "type": "string"
            },
            "secondary": {
              "type": "string"
            },
            "secondaryContrast": {
              "type": "string"
            },
            "background": {
              "type": "string"
            },
            "paper": {
              "type": "string"
            },
            "textPrimary": {
              "type": "string"
            },
            "textSecondary": {
              "type": "string"
            },
            "divider": {
              "type": "string"
            },
            "success": {
              "type": "string"
            },
            "error": {
              "type": "string"
            },
            "warning": {
              "type": "string"
            },
            "info": {
              "type": "string"
            }
          },
          "additionalProperties": true
        },
        "backgroundImage": {
          "type": [
            "string",
            "null"
          ]
        },
        "defaultNodeColor": {
          "type": [
            "string",
            "null"
          ]
        },
        "defaultEdgeColor": {
          "type": [
            "string",
            "null"
          ]
        },
        "snapToGrid": {
          "type": "boolean"
        },
        "gridSize": {
          "type": "integer",
          "minimum": 1
        },
        "autoSave": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    },
    "viewport": {
      "type": "object",
      "required": [
        "pan",
        "zoom"
      ],
      "properties": {
        "pan": {
          "type": "object",
          "required": [
            "x",
            "y"
          ],
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            }
          },
          "additionalProperties": false
        },
        "zoom": {
          "type": "number",
          "minimum": 0.01
        }
      },
      "additionalProperties": false
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "position"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "position": {
            "type": "object",
            "required": [
              "x",
              "y"
            ],
            "properties": {
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              }
            },
            "additionalProperties": false
          },
          "width": {
            "type": "number",
            "minimum": 0
          },
          "height": {
            "type": "number",
            "minimum": 0
          },
          "color": {
            "type": "string"
          },
          "visible": {
            "type": "boolean"
          },
          "showLabel": {
            "type": "boolean"
          },
          "data": {
            "type": [
              "object",
              "null"
            ],
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "source",
          "target"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "source": {
            "type": "string"
          },
          "target": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "style": {
            "type": "object",
            "properties": {
              "width": {
                "type": "number",
                "minimum": 0
              },
              "dash": {
                "type": "array",
                "items": {
                  "type": "number"
                }
              },
              "curved": {
                "type": "boolean"
              },
              "color": {
                "type": "string"
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    },
    "clusters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "nodeIds"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "nodeIds": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "bounds": {
            "type": "object",
            "required": [
              "x",
              "y",
              "width",
              "height"
            ],
            "properties": {
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              },
              "width": {
                "type": "number",
                "minimum": 0
              },
              "height": {
                "type": "number",
                "minimum": 0
              }
            },
            "additionalProperties": false
          },
          "visible": {
            "type": "boolean"
          },
          "style": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    },
    "manifest": {
      "type": "object",
      "description": "Optional manifest listing external assets referenced by the file (images, fonts, etc.)",
      "properties": {
        "version": {
          "type": "string"
        },
        "assets": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "uri"
            ],
            "properties": {
              "id": {
                "type": "string",
                "description": "Local asset id used in the file"
              },
              "uri": {
                "type": "string",
                "format": "uri",
                "description": "Location of the asset (file path or remote URL)"
              },
              "type": {
                "type": "string",
                "description": "Asset type (image, font, etc.)"
              },
              "embedded": {
                "type": "boolean",
                "description": "If true, asset data is embedded in the file or sidecar"
              },
              "mimeType": {
                "type": "string"
              },
              "checksum": {
                "type": "string",
                "description": "Optional checksum (e.g., sha256) for verification"
              },
              "description": {
                "type": "string"
              }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
